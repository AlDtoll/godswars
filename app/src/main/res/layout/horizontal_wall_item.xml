<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/light_green_background_color"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/room_size"
        android:layout_height="@dimen/wall_size">

        <ImageView
            android:id="@+id/wall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotation="90"
            android:scaleX="0.5"
            android:scaleY="2"
            tools:background="@drawable/ic_vertical_door_closed" />

        <ImageView
            android:id="@+id/wallFog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/terra_incognito_color"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/wallSelect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/select_element_color"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/wallEnabled"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_enabled"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>