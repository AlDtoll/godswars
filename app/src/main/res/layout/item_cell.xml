<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/light_green_background_color"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/room"
            android:layout_width="@dimen/room_size"
            android:layout_height="@dimen/room_size"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/ic_pier_cell" />

        <ImageView
            android:id="@+id/roomFog"
            android:layout_width="@dimen/room_size"
            android:layout_height="@dimen/room_size"
            android:background="@color/terra_incognito_color"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/roomSelect"
            android:layout_width="@dimen/room_size"
            android:layout_height="@dimen/room_size"
            android:background="@color/select_element_color"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/roomEnabled"
            android:layout_width="@dimen/room_size"
            android:layout_height="@dimen/room_size"
            android:background="@drawable/ic_enabled"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rightWall"
            android:layout_width="@dimen/wall_size"
            android:layout_height="@dimen/room_size"
            android:background="@drawable/ic_empty_cell"
            app:layout_constraintStart_toEndOf="@id/room"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rightWallFog"
            android:layout_width="@dimen/wall_size"
            android:layout_height="@dimen/room_size"
            android:background="@color/terra_incognito_color"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/room"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rightWallSelect"
            android:layout_width="@dimen/wall_size"
            android:layout_height="@dimen/room_size"
            android:background="@color/select_element_color"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/room"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rightWallEnabled"
            android:layout_width="@dimen/wall_size"
            android:layout_height="@dimen/room_size"
            android:background="@drawable/ic_enabled"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/room"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bottomWall"
            android:layout_width="@dimen/room_size"
            android:layout_height="@dimen/wall_size"
            android:background="@drawable/ic_empty_cell"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/room" />

        <ImageView
            android:id="@+id/bottomWallFog"
            android:layout_width="@dimen/room_size"
            android:layout_height="@dimen/wall_size"
            android:background="@color/terra_incognito_color"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/room" />

        <ImageView
            android:id="@+id/bottomWallSelect"
            android:layout_width="@dimen/room_size"
            android:layout_height="@dimen/wall_size"
            android:background="@color/select_element_color"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/room" />

        <ImageView
            android:id="@+id/bottomWallEnabled"
            android:layout_width="@dimen/room_size"
            android:layout_height="@dimen/wall_size"
            android:background="@drawable/ic_enabled"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/room" />


        <ImageView
            android:id="@+id/cross"
            android:layout_width="@dimen/wall_size"
            android:layout_height="@dimen/wall_size"
            android:background="@drawable/ic_empty_cell"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/crossFog"
            android:layout_width="@dimen/wall_size"
            android:layout_height="@dimen/wall_size"
            android:background="@color/terra_incognito_color"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/crossSelect"
            android:layout_width="@dimen/wall_size"
            android:layout_height="@dimen/wall_size"
            android:background="@color/select_element_color"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/crossEnabled"
            android:layout_width="@dimen/wall_size"
            android:layout_height="@dimen/wall_size"
            android:background="@drawable/ic_enabled"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>